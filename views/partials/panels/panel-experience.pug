if !item.currentPosition
    a.resume-component(data-toggle='modal', data-target='#resume-modal', data-modal-data=item, data-panel-type=config.colors.experience)

        .panel.panel-hover(class='panel-' + config.colors.experience)

            .panel-heading
                h3.panel-title= item.title

            .panel-body
                if item.company

                    .panel-body-image.pull-right
                        img(src=item.company.logo)

                    .panel-body-text
                        p
                            strong= item.company.name

                        if item.start
                            p.text-dimmed

                                if item.end
                                    em #{moment(item.start).format('MMMM YYYY')} - #{moment(item.end).format('MMMM YYYY')}
                                else
                                    em #{moment(item.start).format('MMMM YYYY')} -

