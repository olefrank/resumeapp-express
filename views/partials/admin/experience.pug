.admin-element
    .panel.panel-primary
        .panel-heading
            h3.panel-title= item.title.da
        .panel-body
            form(data-id=item._id, data-section='experience')
                .row
                    .col-xs-6
                        .form-group
                            label Titel
                            if item
                                input.admin-experience-title.form-control(data-prop="title.da", data-type="resume-form-field", value=item.title.da)
                            else
                                input.admin-experience-title.form-control(data-prop="title.da", data-type="resume-form-field")
                    .col-xs-6
                        .form-group
                            label Title
                            if item
                                input.admin-experience-title.form-control(data-prop="title.en", data-type="resume-form-field", value=item.title.en)
                            else
                                input.admin-experience-title.form-control(data-prop="title.en", data-type="resume-form-field")
                .row
                    .col-xs-6
                        .form-group
                            label Virksomhed
                            if item
                                input.admin-experience-company.form-control(data-prop="company.name.da", data-type="resume-form-field", value=item.company.name.da)
                            else
                                input.admin-experience-company.form-control(data-prop="company.name.da", data-type="resume-form-field")

                    .col-xs-6
                        .form-group
                            label Company
                            input.admin-experience-company.form-control(data-prop="company.name.en", data-type="resume-form-field", value=item.company.name.en)

                .row
                    .col-xs-6
                        .form-group
                            label Sted
                            input.admin-experience-locality.form-control(data-prop="locality.da", data-type="resume-form-field", value=item.locality.da)
                    .col-xs-6
                        .form-group
                            label Locality
                            input.admin-experience-locality.form-control(data-prop="locality.en", data-type="resume-form-field", value=item.locality.da)

                .row
                    .col-xs-6
                        .form-group
                            label Beskrivelse
                            .admin-experience-description(contentEditable, data-prop="description.da", data-type="resume-form-field")= item.description.da

                    .col-xs-6
                        .form-group
                            label Description
                            .admin-experience-description(contentEditable, data-prop="description.en", data-type="resume-form-field")= item.description.en

                .well
                    .row
                        .col-xs-4
                            .form-group
                                label Start
                                input.admin-experience-date.form-control(type="date", data-prop="start", data-type="resume-form-field", value=moment(item.start).format('YYYY-MM-DD'))
                        .col-xs-4
                            .form-group
                                label End
                                input.admin-experience-date.form-control(type="date", data-prop="end", data-type="resume-form-field", value=moment(item.end   ).format('YYYY-MM-DD'))
                        .col-xs-4
                            .checkbox
                                label
                                    input(type='checkbox', checked=item.currentPosition, data-prop="currentPosition", data-type="resume-form-field")
                                    |  Nuv√¶rende job
                        .col-xs-12
                            .form-group
                                label Logo
                                input.admin-experience-logo.form-control(data-prop="company.logo", data-type="resume-form-field", value=item.company.logo)

                .btn-toolbar
                    button.btn.btn-success.btn-admin-save(type='button')= strings.buttons.save.da
                    button.btn.btn-warning.btn-admin-delete(type='button')
                        span.glyphicon.glyphicon-remove
                        | #{strings.buttons.delete.da}
